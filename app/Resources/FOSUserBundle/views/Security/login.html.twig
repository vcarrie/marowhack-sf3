{% extends '@DefinimaAdmin/layout.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block bodyclass %}class=""{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>{{ nom_site }}</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-card-msg">{% if error %}{{ error.messageKey|trans(error.messageData, 'security') }}{% endif %}</p>

                <form action="{{ path('fos_user_security_check') }}" method="post">
                    <div class="form-group has-feedback">
                        <input class="form-control" placeholder="Email" name="_username" required="required" type="email">
                        <span class="fa fa-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input class="form-control" placeholder="Mot de passe"  name="_password" required="required" type="password">
                        <span class="fa fa-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="checkbox icheck">
                                <label>
                                    <div class="icheckbox_square-blue" style="position: relative;" aria-checked="false" aria-disabled="false">
                                        <input style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;" type="checkbox"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255) none repeat scroll 0% 0%; border: 0px none; opacity: 0;"></ins></div> Remember Me
                                </label>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mb-1">
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
                </p>
                <p class="mb-0">
                    <a href="{{ path('fos_user_registration_register') }}" class="text-center">Inscription</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

{% endblock %}
