{% extends '::layout-fos.html.twig' %}

{#{% block title %}Connexion{% endblock %}#}

{% block contentFOS %}

    <div class="login-card-body">
        <p class="login-card-msg">{% if error %}{{ error.messageKey|trans(error.messageData, 'security') }}{% endif %}</p>

        <form action="{{ path('admin_login_check') }}" method="post">
            <div class="form-group has-feedback">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    </div>
                    <input class="form-control" placeholder="Email" name="_username" required="required" type="email">
                </div>
            </div>
            <div class="form-group has-feedback">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input class="form-control" placeholder="Mot de passe" name="_password" required="required" type="password">
                </div>
            </div>
            <div class="row">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                <div class="col-12">
                    <button type="submit" class="btn btn-aptb btn-block btn-flat">Connexion</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
