{% extends 'AdminBundle::layout.html.twig' %}
{% import 'AdminBundle:Macros:field.html.twig' as macroField %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('vendor/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css') }}" />
    <link href="{{ asset('vendor/select2/select2.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}

{% block bodyclass %}class="skin-blue sidebar-mini"{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('vendor/bootstrap-datetimepicker/js/moment-with-locales.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('vendor/select2/select2.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('vendor/select2/select2_locale_fr.js') }}" type="text/javascript"></script>
{% endblock %}


{% block contentadmin %}
    <div class="card">
        <div class="overlay" style="display: none;">
            <i class="fa fas fa-sync fa-spin"></i>
        </div>
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-users-cog"></i>
                &nbsp;&nbsp;&nbsp;Ajouter un administrateur
            </h3>

        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="card-body">   

            {{ form_errors(form) }}
            {{ macroField.blockInput(form,'enabled',0,'switch') }}             
            {{ macroField.blockInput(form,'nom') }}
            {{ macroField.blockInput(form,'prenom') }}
            {{ macroField.blockInput(form,'email') }}
            {{ macroField.blockInputRepeated(form,'newpass') }}  			         

        </div>
        {{ macroField.blockInputSubmit(form, 'Ajouter', 'admin_gestion_admin_index') }}
        {{ form_end(form) }}
    </div>
{% endblock %}

